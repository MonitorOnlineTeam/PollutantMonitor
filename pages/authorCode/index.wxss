page {
  height: 100%;
}

.warp {
  height: 100%;
  /* position: relative; */
  overflow-y: hidden;
}

.warp .imageClass {
  position: absolute;
  width: 100%;
  height: 100%;
}

.warp .gray {
  opacity: 0.6;
}

.warp-container {
  position: absolute;
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80%;
}

.warp-title {
  color: white;
  font-size: 48rpx;
  margin-bottom: 60rpx;
  /* text-indent: 40rpx; */
}

.warp-input {
  background: white;
  margin-bottom: 160rpx;
  border-radius: 10rpx;
  width: 60%;
  height: 80rpx;
  padding: 20rpx 20rpx 60rpx 20rpx;
  color: rgb(162, 166, 206);
  box-sizing: border-box;
}

.warp-input input {
  /* text-indent: 40rpx; */
}

.warp-validateMessage {
  color: red;
  margin-top: 30rpx;
}

.warp-button {
  width: 60%;
}

.warp-button button {
  border-radius: 80rpx;
  color: rgb(29, 147, 243);
}
