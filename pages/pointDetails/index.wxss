/* pages/realTimeData/home/home.wxss */

/* 头部布局 */
page {
  background-color: #f2f2f2;
}

.chart-content {
  width: 100%;
  height: 600rpx;
}

.f2-chart {
  position: absolute;
  width: 100%;
  height: 600rpx;
  background-color: #fff;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.top {
  width: 100%;
  height: 128rpx;
  background-color: white;
}

.top image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 4rpx;
  vertical-align: middle;
}

.top-content {
  height: 128rpx;
  text-align: center;
  vertical-align: middle;
}

.top-content-left {
  width: 50%;
  height: 128rpx;
  float: left;
  border-right: 1px solid #f2f2f2;
  box-sizing: border-box;
}

.top-content-right {
  width: 50%;
  height: 128rpx;
  float: left;
  box-sizing: border-box;
}

.content-top {
  font-size: 30rpx;
  color: #333;
  margin-top: 26rpx;
}

.content-top text {
  /* font-size: 32rpx; */
  margin-left: 10rpx;
}

.content-bottom {
  font-size: 28rpx;
  color: #666;
  margin-top: 13rpx;
  margin-bottom: 13rpx;
}


/* 头部布局 */





.txtClass {
  vertical-align: middle;
}



.imgClass {
  /* position: absolute; */
  width: 100%;
  margin-top: 6px;
  height: 35vh;
}

.fangda {
  position: absolute;
  width: 20px;
  height: 20px;
  top: 160rpx;
  right: 15rpx;
}


.grid.col-3>view {
  width: 100%;
}

.overClass {
  color: red;
}

.exceptionClass {
  color: orange;
}

.padding-sm {
  height: 12vh;
}

.descriptionClass {
  height: 100%;
}

.disClass {
  height: 100%;
  vertical-align: middle;
}

.descriptionClass {
  height: 12vh;
  vertical-align: middle;
  display: table-cell;
  text-align: center;
  width: 100vh;
}

.tab-text-color {
  background-color: #fff;
}

.tab-text-color.active {
  background-color: #fcf0bc;
}




.OffLine {
  color: #999;
}

.OnLine {
  color: #4ec062;
}

.Over {
  color: red;
}

.Exception {
  color: orange;
}

.tips-content {
  position: absolute;
  margin-top: 20rpx;
  width: 100%;
  padding: 0 10rpx;
  background: #fff;
}

.col-class {
  padding: 4px;
  box-sizing: border-box;
}

.tips-item {
  background: #cce6ff;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #333;
}

.tips-value {
  margin-top: 10rpx;
}

.handle-content {
  height: 80rpx;
  color: #666;
  display: flex;
  padding: 0 20rpx;
  line-height: 80rpx;
  background: #fff;
  font-size: 24rpx;
  padding-right: 40rpx;
  justify-content: space-between;
}