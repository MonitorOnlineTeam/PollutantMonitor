/* pages/OrderPointList/OrderPointList.wxss */
page {
  background-color: #f2f2f2;
}

.search-bg {
  height: 98rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.search-container {
  height: 60rpx; 
  width: 650rpx;
  background-color: white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-left-icon {
  margin-left: 20rpx; 
  width: 28rpx;
  height: 28rpx;
}

.search-input {
  flex: 1;
  margin-left: 20rpx;
}

.list-item-bg {
  width: 750rpx;
  height: 180rpx;
  background-color: white;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list-item-first-line {
  margin-top: 24rpx;
  flex-direction: row;
  margin-left: 24rpx;
  align-items: center;
  display: flex;
}

.list-item-icon {
  margin-left: 9rpx;
  height: 35rpx;
  width: 35rpx;
}

.list-item-first-line-text {
  margin-left: 20rpx; 
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.list-item-second-line-text {
  margin-left: 24rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}

.list-item-third-line-container {
  margin-left: 24rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.list-item-third-line-text {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}