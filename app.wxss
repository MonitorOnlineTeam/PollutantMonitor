/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.page-container {
  height: 100%;
  padding-bottom: 200rpx;
}

@font-face {
  font-family: 'iconfont';
  /* project id 3182486 */
  src: url('');
  src: url('?#iefix') format('embedded-opentype'),
    url('//at.alicdn.com/t/font_3182486_q2f7kh54l0c.woff2') format('woff2'),
    url('//at.alicdn.com/t/font_3182486_q2f7kh54l0c.woff') format('woff'),
    url('//at.alicdn.com/t/font_3182486_q2f7kh54l0c.ttf') format('truetype'),
    url('#iconfont') format('svg');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
}

.l-icon-home-fill:before {
  content: "&#xe867;";
}

